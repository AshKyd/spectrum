{
	"manifest_version": 2,

	"name": "Color Blind",
	"description": "Test the page",
	"version": "0.1",
	
	"homepage_url": "http://healthignition.com",

	"browser_action": {
		"default_title": "Color Blind",
		"default_popup": "popup.html",
		"default_icon": {
			"19": "img/19.png",
			"38": "img/38.png"
		}
	},
	
	"icons": {
		"128": "img/128.png",
		"48": "img/48.png"
	},
	
	"web_accessible_resources": [
		"img/filters.svg"
	],
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": [],
			"js": ["js/filters.js"]
		}
	],

	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	]
}