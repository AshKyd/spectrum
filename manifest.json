{
	"manifest_version": 2,

	"name": "Color Vision",
	"description": "Instantly test your web page with different types of color vision deficiency.",
	"version": "0.1.1",
	
	"homepage_url": "http://lvivski.com/colorvision",

	"browser_action": {
		"default_title": "Color Vision",
		"default_popup": "popup.html",
		"default_icon": {
			"19": "img/action_small.png",
			"38": "img/action.png"
		}
	},
	
	"icons": {
		"128": "img/icon.png",
		"48": "img/icon_small.png"
	},
	
	"web_accessible_resources": [
		"img/filters.svg"
	],
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": [],
			"js": ["js/filters.js"]
		}
	],

	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	]
}